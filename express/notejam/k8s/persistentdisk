apiVersion: v1
kind: Pod
metadata:
  name: gke-test-pd
spec:
  containers:
  - image: gcr.io/nordcloud-300113/gke-test-image:v1
    name: gke-test-container
    volumeMounts:
    - mountPath: /db
      name: db-volume
  volumes:
  - name: db-volume
    # This GCE PD must already exist.
    gcePersistentDisk:
      pdName: my-data-disk
      fsType: ext4


 